<%= simple_form_for @deacon, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Deacon</legend>
		
		<%= f.input :first_name %>
		<%= f.input :last_name %>
		<%= f.input :phone %>
		<%= f.input :active %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', deacons_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
