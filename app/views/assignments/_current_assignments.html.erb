<table class="table table-striped">
  <thead>
    <tr>
      <th>Client</th>
			<th>Deacon</th>
      <th>Start Date</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= link_to assignment.client.name, client_path(assignment.client) %></td>
				<td><%= link_to assignment.deacon.name, deacon_path(assignment.deacon) %></td>
        <td><%= assignment.start_date.strftime("%m/%d/%y") %></td>
        <td>
					<%= link_to raw("<i class='icon-file'></i> Details"), assignment_path(assignment), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @assignments, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
