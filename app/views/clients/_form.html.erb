<%= simple_form_for @client, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Client</legend>
	<p>* Denotes required field </p>
	<br>
	<table class="table table-striped" >
		<tbody>
			<tr>
				<td>Contact</td>
				<td>Personal</td>
				<td>Aid Considerations</td>
			</tr>
			<tr>
				<td>
					<p>
					  <b>Name:</b><br>
					  <%= f.input :last_name %>
					  <%= f.input :first_name %>
					  <br>
					</p>
					<p>
					  <b>Residence:</b><br>
					  	<%= f.input :address %>
						<%= f.input :city %>
						<%= f.input :state, :collection => Client::STATES_LIST %>
						<%= f.input :zip, :label => "ZIP Code" %>
						<br>
					</p>

					<p>
						<%= f.input :phone, :label => "Phone Number" %>
						<br>
					</p>
				</td>
				<td>
					<p>
						<%= f.input :gender, :collection => Client::GENDER_LIST %><br>
						<%= f.input :ethnicity, :collection => Client::RACE_LIST %><br>
						<%= f.input :marital_status, :collection => Client::MARITAL_LIST, :label => "Marital Status" %><br>
					</p>
				</td>
				<td>
					<p>
						<b>Check the following boxes if applicable.</b><br><br>
						<b>Is the client...</b><br>
					</p>
					<p>
						<%= f.input :is_employed, :label => "...employed?" %>
					</p>
					<p>
						<%= f.input :gov_assistance, :label => "...receiving government assistance?" %>
					</p>
					<p>
						<%= f.input :is_veteran, :label => "...a veteran?" %>
					</p>
				</td>
			</tr>
		</tbody>
	</table>

	<%= f.input :active unless controller.action_name.capitalize != "Edit" %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', clients_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
